{% extends 'base.html.twig' %}
{% block title %} Homepage {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">

            <!-- Article List -->

            <div class="col-sm-12 col-md-8">

                <!-- Supporting Articles -->
                {% for article in articles %}
                    <div class="article-container my-1">

                        <a href="{{ path('article_show', {slug: article.slug}) }}">
                            <img class="article-img" src="{{ asset(article.imageFilename) }}">
                            <div class="article-title d-inline-block pl-3 align-middle">
                                <span>{{ article.title }}</span>
                                <br>
                                <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/alien-profile.png') }}"> {{ article.author }} </span>
                                <span class="pl-5 article-details float-right">
                                <a href="{{ path('article_delete', {id: article.id}) }}"> delete </a>
                            </span>
                            </div>
                        </a>
                    </div>
                {% endfor %}

            </div>

            </div>
        </div>
    </div>
{% endblock %}

