{% extends 'content_base.html.twig' %}

{% block title %} Manage Comments {% endblock %}

{% block content_body %}

    <div class="row">
        <div class="col-sm-12">
            <h1>Manage Comments</h1>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Comment</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>
                    <a href={{ path('article_show', {slug: comment.article.slug}) }}> {{ comment.article.title }}</a>

                </td>
                <td>
                    {{ comment.article.author }}
                </td>
                <td style="width: 20%">
                    {{ comment.content }}
                </td>
                <td>
                    <a href={{ path('admin_comment_delete', { id: comment.id}) }}>
                        <span class="fa fa-remove"></span>
                    </a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}